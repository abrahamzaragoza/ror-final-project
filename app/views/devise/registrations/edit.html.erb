<h2 class='text-center m-5'>Edit <%= resource_name.to_s.humanize %></h2>
<section class='col-8 offset-2 col-sm-6 offset-sm-3'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class='field'>
      <%= f.label :first_name, class: 'm-2' %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control m-2' %>
    </div>

    <div class='field'>
      <%= f.label :last_name, class: 'm-2' %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: 'last_name', class: 'form-control m-2' %>
    </div>
    <em class="m-2"> Suscribe to receive security emails</em>
    <div class='form-check'>
      <%= f.check_box :security_updates, class: 'form-check-input m-2' %>
      <%= f.label :security_updates, class: 'form-check-label m-2' %><br />
    </div>

    <div class='field'>
      <%= f.label :email, class: 'm-2' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control m-2' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class='field'>
      <%= f.label :password, class: 'm-2' %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control m-2' %>
      <% if @minimum_password_length %>
        <br />
        <em class="m-2"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class='field'>
      <%= f.label :password_confirmation, class: 'm-2' %><br />
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control m-2' %>
    </div>

    <div class='field'>
      <%= f.label :current_password, class: 'm-2' %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control m-2' %>
    </div>

    <div class='actions'>
      <%= f.submit 'Update', class: 'btn btn-primary m-2' %>
    </div>
  <% end %>

  <h3 class="m-2">Cancel my account</h3>

  <p class="m-2">Unhappy? <%= button_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' },
                                                  method: :delete, class: 'btn btn-danger btn-sm m-2' %></p>
  <hr>
  <%= link_to 'Back', :back, class: 'btn btn-primary m-2' %>
</section>
