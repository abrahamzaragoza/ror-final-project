<% flash.each do |type, msg| %>
  <% presenter = FlashMessagesPresenter.new(type) %>
  <div class="alert alert-<%= presenter.flash_type_class %> m-0 fade show" role="alert">
    <div class="d-flex justify-content-center">
      <span class="me-4"><%= msg %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
