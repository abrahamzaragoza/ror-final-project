<div class="btn-group offset-8">
  <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
    options
  </button>
  <ul class="dropdown-menu">
    <li>
      <%= link_to 'Edit', edit_task_path(task), class: 'dropdown-item' %>
    </li>
    <li>
      <%= link_to 'Delete', task_path(task), method: :delete, class: 'dropdown-item', data: { confirm: "Are you sure?" } %>
    </li>
    <li>
      <%= link_to 'Mark start time', task_path(task, :task => { :started_at => Time.now }), method: :put, class: 'dropdown-item', data: { confirm: "Are you sure?" } %>
    </li>
    <li>
      <%= link_to 'Mark task as finished', task_path(task, :task => { :finished_at => Time.now }), method: :put, class: 'dropdown-item', data: { confirm: "Are you sure?" } %>
    </li>
  </ul>
</div>
