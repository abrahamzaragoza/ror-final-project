<section class='container-fuild'>
  <%= form_with model:[@task_list, @task] do |f|  %>
    <div class="field">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="field col-6">
      <%= f.label :doing_time, class: 'form-label' %>
      <%= f.number_field :doing_time, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :justification, class: 'form-label' %>
      <%= f.text_field :justification, class: 'form-control' %>
    </div>
    <div class="field m-1">
      <%= f.label :task_list_id, class: 'form-label' %>
      <%= f.collection_select :task_list_id, @task.id.nil? ? @task_list.board.task_lists : @task.task_list.board.task_lists,
          :id, :name, class: 'form-select' %>
    </div>
    <div class="field mx-1">
      <%= f.label :details, class: 'form-label' %>
      <%= f.rich_text_area :details, class: 'form-control' %>
    </div>
    <div class='actions'>
      <%= link_to 'Back', :back, class: 'btn btn-purple mx-2' %>
      <%= f.submit class: 'btn btn-purple offset-sm-10 mt-3'  %>
    </div>
  <% end %>
</section>
