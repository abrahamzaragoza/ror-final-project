<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= task.title %></h5>
    <span class="card-subtitle text-muted">
      Created by:
      <p class="badge text-bg-purple">Antonio H.</p>
    </span>
    <hr>
    <%= render 'dropdown_button', task: task %>
    <span class="card-text">
      <%= task.details %>
    </span>
    <hr>
    <p class="badge bg-success">Started at: <%= task.started_at %></p><br>
    <p class="badge bg-secondary">Finished at: <%= task.finished_at %></p>
    <hr>
    <small class="card-text">Created <%= format_time_in_words(task.created_at) %> ago</small>
  </div>
</div>
