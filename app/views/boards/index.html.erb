<div class="d-flex justify-content-between">
  <h3 style="height: 1rem;">Current Boards</h3>
  <%= link_to 'New Board <i class="fa-solid fa-plus"></i>'.html_safe, new_board_path,
    class: 'btn btn-sm btn-primary', style: 'width: 120px;' %>
</div>
<div class="d-flex justify-content-evenly flex-wrap p-3" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; height: 80vh;">
  <% @boards.all.each do |board| %>
    <% board_presenter = BoardPresenter.new(board) %>
    <div class="card m-3 c-shadow" style="width: 18rem; height: 250px;">
      <div class="card-body">
        <h5 class="card-title text-center">
          <%= board.title %>
          <%= link_to '<i class="fa-regular fa-pen-to-square"></i>'.html_safe, edit_board_path(board),
              class: 'btn btn-sm btn-light w-2r' %>
        </h5>
        <hr>
        <p class="badge <%= board_presenter.visibility_badge_color %>"><%= board.visibility %></p>
        <div>
          <p> <%= board_presenter.humanized_list_count %> </p>
          <p class="text-muted text-center" style="font-size: 0.75rem;">created <%= time_ago_in_words(board.created_at) %> ago</p>
        </div>
        <%= link_to "View", board_path(board), class: 'btn btn-purple offset-9' %>
      </div>
    </div>
  <% end %>
</div>
