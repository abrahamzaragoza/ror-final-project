<%= form_with model: @payment do |f| %>
<div class="field">
  <%= f.label :card_number, class: 'form-label' %>
  <%= f.text_field :card_number, class: 'form-control col-3', required: true %>
</div>
<div class="form-group field">
  <div class="col-12 field">
    <%= f.label :card_expires, class: 'form-label' %>
  </div>
  <div class="d-flex">
    <div class="col-3" style="margin-right: 5rem;">
      <%= f.select :card_expires_month, Payment.month_options, class: 'form-select col-3', required: true %>
    </div>
    <div class="col-3">
      <%= f.select :card_expires_year, Payment.year_options, class: 'form-select col-3', required: true %>
    </div>
  </div>
</div>
<div class="field">
  <%= f.label :card_cvv, "CVV", class: 'form-label' %>
  <%= f.text_field :card_cvv, class: 'form-control', style: 'width: 4rem;', required: true %>
</div>
<div class="actions mt-2 d-flex justify-content-end">
  <%= link_to 'Back', :back, class: 'btn btn-secondary mx-2' %>
  <%= f.submit class: 'btn btn-purple' %>
</div>
<% end %>
